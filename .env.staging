# Staging Environment Configuration
# Copy this file to .env on your staging server

APP_NAME="Revira Industrial (Staging)"
APP_ENV=staging
APP_KEY=base64:99aCQWck2IycJkIFX0s+BsTfaNBu5wuyOkyWSQt2bJo=
APP_DEBUG=true
APP_URL=https://staging.your-domain.com

APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Staging Database Configuration
# Update these values with your staging database details
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_staging_database_name
DB_USERNAME=your_staging_database_user
DB_PASSWORD=your_staging_database_password
    
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.staging.your-domain.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=file
# CACHE_PREFIX=revira_staging_

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Staging Mail Configuration
# Can use mailtrap or similar testing service
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Staging Debugbar Configuration
DEBUGBAR_ENABLED=true
DEBUGBAR_OPEN_STORAGE=true

# Additional Staging Settings
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Performance Settings
VIEW_CACHE_PATH=/tmp
CACHE_PATH=/tmp

# Security Settings
SANCTUM_STATEFUL_DOMAINS=staging.your-domain.com

# Testing Settings
TELESCOPE_ENABLED=true

# Google Analytics (Optional - use staging ID)
GOOGLE_ANALYTICS_ID=

# reCAPTCHA (Optional - use test keys)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=